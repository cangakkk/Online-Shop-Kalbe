@using KalbeShop.ViewModels

@{
    Layout = null;
}

<div class="h2">Add Data</div>
<br>
<div class="card">
    <form id="frmVariant" method="post" asp-action="Add">
        <div class="card-header">Create New</div>
        <div class="card-body">
            <div class="mb-3">
                <label>Cutomer Name</label>
                <input type="text" name="TxtCustomerName" class="form-control" required />
            </div>
            <div class="mb-3">
                <label>Customer Address</label>
                <input type="text" name="TxtCustomerAddress" class="form-control" required />
            </div>
            <div class="mb-3">
                <label>Gender</label>
                <select name="BitGender" class="form-control" id="VariantId">
                    <option value="">-- Gender --</option>
                            <option value="false">Perempuan</option>
                            <option value="true">Laki-Laki</option>
                </select>
            </div>
            <div class="mb-3">
                <label>Tanggal Lahir</label>
                <input type="date" name="DtmBirthDate" class="form-control" required />
            </div>
        </div>
        <div class="card-footer">
            <button type="submit" class="btn btn-primary" id="btnSave">Create</button>
            <button type="button" class="btn btn-primary" id="btnCancel"> Cancel </button>
        </div>
    </form>
</div>

<script>
    $("#btnCancel").click(function () {
        $("#MyModal").modal("hide");
    });
</script>