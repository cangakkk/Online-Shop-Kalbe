@using KalbeShop.ViewModels
@model VMProduk
@{
    Layout = null;
}

<div class="h2">Edit Data</div>
<br>
<div class="card">
    <form id="frmVariant" method="post" asp-action="Edit">
        <div class="card-header">Edit Product</div>
        <div class="card-body">
            <div class="mb-3">
                <label>Product Code</label>
                <input type="text" name="TxtProductCode" class="form-control" value="@Model.TxtProductCode" required />
                <input type="hidden" name="IntProductId" class="form-control" value="@Model.IntProductId" required />
            </div>
            <div class="mb-3">
                <label>Product Name</label>
                <input type="text" name="TxtProductName" class="form-control" value="@Model.TxtProductName" required />
            </div>
            <div class="mb-3">
                <label>Quntity</label>
                <input type="number" name="IntQty" class="form-control" value="@Model.IntQty" required />
            </div>
            <div class="mb-3">
                <label>Price</label>
                <input type="number" name="DecPrice" class="form-control" value="@Model.DecPrice" required />
            </div>
        </div>
        <div class="card-footer">
            <button type="submit" class="btn btn-primary" id="btnSave">Save Change</button>
            <button type="button" class="btn btn-primary" id="btnCancel"> Cancel </button>
        </div>
    </form>
</div>

<script>
    $("#btnCancel").click(function () {
        $("#MyModal").modal("hide");
    });
</script>